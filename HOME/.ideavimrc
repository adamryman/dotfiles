
" References {{{ ----------------------------------------------------------
" http://ideavim.sourceforge.net/vim/index.html#vim.ex-cmd-index
" https://github.com/beloglazov/vimrc/blob/master/.ideavimrc
" https://github.com/Valloric/dotfiles/blob/master/intellij/ideavimrc
" }}}
" Clipboard {{{ -----------------------------------------------------------
set clipboard=unnamedplus,unnamed
" }}}
" Plugins {{{ -------------------------------------------------------------
set surround
" }}}
" Windowing  {{{ -------------------------------------------------------------
map <c-h> <c-w>h
map <c-l> <c-w>l
map <c-k> <c-w>k
map <c-j> <c-w>j
" }}}
" Lines  {{{ -------------------------------------------------------------
" Line breaks look like this
set linebreak
set showbreak=->\ \
" }}}
" Search  {{{ -------------------------------------------------------------
" Allows case insensitive searching with smart exceptions
set ignorecase
set smartcase
" }}}
" Leader {{{ --------------------------------------------------------------
let mapleader = " "

" Quick quit and write
nnoremap <leader>q :q<CR>
nnoremap <leader>w :w<CR>

" Reload .ideavimrc
nnoremap <leader>s :source ~/.ideavimrc<CR>
nnoremap <leader>e :action GotoFile<cr>
" Open .ideavimrc
"nnoremap <leader>v :sp ~/.ideavimrc<CR>G

"" Quick opening tabs
" From @lelandbatey
"map <leader>t :tabe<space>

" }}}

"
" Fold on opening for organization
" vim:foldmethod=marker:foldlevel=0
